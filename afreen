<script>

// üíå EDIT NAMES HERE
const yourName = "Ravi";
const herName = "Afreen";

// Set personalised text
document.getElementById("question").textContent =
  `${Afreen}, will you be my Valentine? ‚Äî ${Ravi} ‚ù§Ô∏è`;

document.getElementById("successMsg").textContent =
  `${Afreen}, you just made ${Ravi} the happiest person üíñ`;

// NO button messages
const messages = [
  "Nooo‚Ä¶ please press Yes ü•∫",
  "Give me one chance ‚ù§Ô∏è",
  "Please don‚Äôt break my heart üíî",
  "Try again‚Ä¶ press Yes üòâ",
  "I‚Äôll be sad üò¢",
  "Just one Yes üíò",
  "Come on‚Ä¶ you know you want to üòè",
  "Pretty please? üåπ",
  "Wrong answer ‚ùå",
  "This button is not working üòú",
  "My heart can't take this üíî",
  "Love is waiting üíñ",
  "You're my only Valentine üåπ",
  "Destiny says Yes ‚ú®"
];

let msgIndex = 0;

const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");
const messageDiv = document.getElementById("message");

// NO button behaviour
noBtn.addEventListener("click", () => {

  messageDiv.textContent = messages[msgIndex];
  msgIndex = (msgIndex + 1) % messages.length;

  // Move NO button randomly
  const x = Math.random() * 120 - 60;
  const y = Math.random() * 80 - 40;
  noBtn.style.transform = `translate(${x}px, ${y}px)`;
});

// YES button ‚Üí success page
yesBtn.addEventListener("click", () => {
  document.getElementById("mainPage").style.display = "none";
  document.getElementById("successPage").style.display = "block";
  createHearts();
});

// Floating hearts
function createHearts() {
  setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.textContent = "üíñ";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = (Math.random() * 20 + 20) + "px";
    document.body.appendChild(heart);

    setTimeout(() => heart.remove(), 5000);
  }, 300);
}

</script>

